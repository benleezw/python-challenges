from random import randint
name = input("input name of target: ")
num = randint(0, 4)
if num == 0:
    print(name, ", I hope you wake up one day, incredibly gifted at piano, only to break your hands the next day")
elif num == 1:
    print("Long time no see", name, ", you have aged like a fine milk")
elif num == 2:
    print("You,", name, ", have the ugliest face I have ever had the misfortune of even glancing at in my life")
elif num == 3:
    print(name, ", why does your face look like the biological diagram of the intestines")
elif num == 4:
    print(name, ", I hope your age of bone shrinkage comes sooner than expected")
